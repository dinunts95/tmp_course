package dz;

/*package dz-№2*/

import java.util.Scanner ; 
 public class Java_homeBin2 {
 
     
   public static void main(String[] args) {
          System.out.println("Введите трехзначное число xxx ") ; 
          Scanner scan = new Scanner(System.in) ;
           int n = scan.nextInt() ; 
           int a ;
           int b ;
           int c ;
           int p ;
             a = n / 100 ; 
             b = (n / 10)%10  ;
             c =  n % 10 ;
                        System.out.println("Hundreds_The first digit: " + a ) ;
                        System.out.println("Dozens-The second digit: " + b ) ;
                         System.out.println("Units-The third digit: " +c );
                    
                 p = a + b + c ;   
         System.out.println("Sum = " +p ) ;
         
                }
 }   
